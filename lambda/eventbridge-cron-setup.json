{
  "eventBridgeRule": {
    "Name": "weekly-commit-stats-aggregation",
    "Description": "주간 커밋 챌린지 통계 집계",
    "ScheduleExpression": "cron(0 */1 * * ? *)",
    "State": "ENABLED",
    "Targets": [{
      "Arn": "arn:aws:lambda:ap-northeast-2:YOUR_ACCOUNT_ID:function:stats-aggregator",
      "Id": "1"
    }]
  },
  "scheduleOptions": [
    {
      "name": "매시간",
      "expression": "cron(0 * * * ? *)",
      "description": "매시간 정각에 실행"
    },
    {
      "name": "30분마다",
      "expression": "rate(30 minutes)",
      "description": "30분마다 실행 (실시간성 높음)"
    },
    {
      "name": "매일 자정",
      "expression": "cron(0 15 * * ? *)",
      "description": "매일 자정 (KST) 실행"
    },
    {
      "name": "매일 2회",
      "expression": "cron(0 0,12 * * ? *)",
      "description": "매일 오전 9시, 오후 9시 (KST)"
    }
  ]
}